{
  "name": "quality-gate-skill",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "biome lint --config-path ../../../biome.json src",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false --config-path ../../../biome.json src",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.5.4",
    "vitest": "^4.0.18"
  }
}
