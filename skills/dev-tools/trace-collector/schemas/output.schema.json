{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "trace-collector output",
  "type": "object",
  "additionalProperties": false,
  "required": ["success", "metadata", "logs"],
  "properties": {
    "success": { "type": "boolean" },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "valid", "issues", "summary"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "valid": { "type": "boolean" },
        "issues": {
          "type": "array",
          "items": { "type": "string" }
        },
        "summary": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "total_events",
            "events_by_type",
            "gate_results",
            "phase_durations_ms",
            "total_tokens_in",
            "total_tokens_out",
            "total_cost_usd",
            "failure_count",
            "retry_count"
          ],
          "properties": {
            "total_events": { "type": "integer", "minimum": 0 },
            "events_by_type": {
              "type": "object",
              "additionalProperties": { "type": "integer", "minimum": 0 }
            },
            "gate_results": {
              "type": "object",
              "additionalProperties": false,
              "required": ["pass", "fail", "warn"],
              "properties": {
                "pass": { "type": "integer", "minimum": 0 },
                "fail": { "type": "integer", "minimum": 0 },
                "warn": { "type": "integer", "minimum": 0 }
              }
            },
            "phase_durations_ms": {
              "type": "object",
              "additionalProperties": { "type": "integer", "minimum": 0 }
            },
            "total_tokens_in": { "type": "integer", "minimum": 0 },
            "total_tokens_out": { "type": "integer", "minimum": 0 },
            "total_cost_usd": { "type": "number", "minimum": 0 },
            "failure_count": { "type": "integer", "minimum": 0 },
            "retry_count": { "type": "integer", "minimum": 0 },
            "total_duration_s": { "type": "number", "minimum": 0 },
            "security_time_to_closure_s": { "type": "number", "minimum": 0 }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {}
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": ["tool_version", "execution_time_ms"],
      "properties": {
        "tool_version": { "type": "string" },
        "execution_time_ms": { "type": "integer", "minimum": 0 }
      }
    },
    "logs": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
