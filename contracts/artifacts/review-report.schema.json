{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Review report artifact",
  "description": "Output of /ar phase: multi-model adversarial critique with deduplication and cost/benefit analysis.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "reviewers",
    "deduplicated_findings",
    "fact_checks",
    "cost_benefit",
    "mitigations",
    "iteration"
  ],
  "properties": {
    "reviewers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["model_id", "findings"],
        "properties": {
          "model_id": { "type": "string", "minLength": 1 },
          "findings": {
            "type": "array",
            "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "category", "description", "severity"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "trace_id": { "type": "string", "minLength": 1 },
          "category": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
          "covers_requirement_ids": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "evidence": { "type": "string" },
          "suggestion": { "type": "string" }
        }
      }
          }
        }
      }
    },
    "deduplicated_findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "category", "description", "severity", "source_models"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "trace_id": { "type": "string", "minLength": 1 },
          "category": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
          "source_models": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "covers_requirement_ids": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "evidence": { "type": "string" },
          "suggestion": { "type": "string" }
        }
      }
    },
    "fact_checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["finding_id", "status", "evidence"],
        "properties": {
          "finding_id": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["confirmed", "refuted", "inconclusive"] },
          "evidence": { "type": "string", "minLength": 1 }
        }
      }
    },
    "cost_benefit": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["finding_id", "severity", "fix_cost", "risk_of_ignoring", "recommendation"],
        "properties": {
          "finding_id": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["critical", "high", "medium", "low", "info"] },
          "fix_cost": { "type": "string", "enum": ["trivial", "low", "medium", "high", "prohibitive"] },
          "risk_of_ignoring": { "type": "string", "enum": ["catastrophic", "high", "moderate", "low", "negligible"] },
          "recommendation": { "type": "string", "enum": ["fix-now", "fix-before-ship", "defer", "accept", "wont-fix"] }
        }
      }
    },
    "mitigations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["finding_id", "status"],
        "properties": {
          "finding_id": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["mitigated", "deferred", "accepted"] },
          "action": { "type": "string" },
          "justification": { "type": "string" }
        }
      }
    },
    "iteration": {
      "type": "object",
      "additionalProperties": false,
      "required": ["loop_count", "remaining_unmitigated"],
      "properties": {
        "loop_count": { "type": "integer", "minimum": 1 },
        "remaining_unmitigated": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "context_manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selection_policy", "ordering_policy", "files_loaded", "docs_loaded"],
      "properties": {
        "selection_policy": { "type": "string", "minLength": 1 },
        "ordering_policy": { "type": "string", "minLength": 1 },
        "files_loaded": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "bytes"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "bytes": { "type": "integer", "minimum": 0 }
            }
          }
        },
        "docs_loaded": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url", "retrieved_at"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "retrieved_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "token_estimate": { "type": "integer", "minimum": 0 },
        "char_count_estimate": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
