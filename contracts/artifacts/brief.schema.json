{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Brief artifact",
  "description": "Output of /arm phase: crystallized requirements from fuzzy input.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "requirements",
    "constraints",
    "non_goals",
    "style",
    "key_concepts",
    "decisions",
    "open_questions"
  ],
  "properties": {
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "description", "priority"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "trace_id": {
            "type": "string",
            "minLength": 1,
            "description": "Stable requirement trace identifier used for cross-artifact linkage."
          },
          "description": { "type": "string", "minLength": 1 },
          "priority": { "type": "string", "enum": ["must", "should", "could"] },
          "rationale": { "type": "string" }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "description", "source"],
        "properties": {
          "type": { "type": "string", "enum": ["hard", "soft"] },
          "description": { "type": "string", "minLength": 1 },
          "source": { "type": "string", "minLength": 1 }
        }
      }
    },
    "non_goals": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["description", "reason"],
        "properties": {
          "description": { "type": "string", "minLength": 1 },
          "reason": { "type": "string", "minLength": 1 }
        }
      }
    },
    "style": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tone": { "type": "string" },
        "patterns": {
          "type": "array",
          "items": { "type": "string" }
        },
        "conventions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "key_concepts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["term", "definition"],
        "properties": {
          "term": { "type": "string", "minLength": 1 },
          "definition": { "type": "string", "minLength": 1 }
        }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["decision", "rationale"],
        "properties": {
          "decision": { "type": "string", "minLength": 1 },
          "rationale": { "type": "string", "minLength": 1 },
          "alternatives_considered": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "open_questions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Must be empty to pass the arm quality gate."
    },
    "context_manifest": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selection_policy", "ordering_policy", "files_loaded", "docs_loaded"],
      "properties": {
        "selection_policy": { "type": "string", "minLength": 1 },
        "ordering_policy": { "type": "string", "minLength": 1 },
        "files_loaded": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "bytes"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "bytes": { "type": "integer", "minimum": 0 }
            }
          }
        },
        "docs_loaded": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url", "retrieved_at"],
            "properties": {
              "url": { "type": "string", "format": "uri" },
              "retrieved_at": { "type": "string", "format": "date-time" }
            }
          }
        },
        "token_estimate": { "type": "integer", "minimum": 0 },
        "char_count_estimate": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
